# Environment variables for GoGoTrade

# Application settings
APP_NAME=GoGoTrade
APP_VERSION=0.1.0
DEBUG_MODE=true

# Database configuration
DATABASE_URL=postgresql://gogotrade:gogotrade@timescaledb:5432/gogotrade
REDIS_URL=redis://redis:6379

# Zerodha Kite Connect (Replace with your actual credentials)
KITE_API_KEY=your_kite_api_key
KITE_ACCESS_TOKEN=your_kite_access_token
KITE_API_SECRET=your_kite_api_secret

# Trading configuration
MAX_POSITION_SIZE=0.02
MAX_DAILY_LOSS=0.05
RISK_FREE_RATE=0.06

# Compliance
ALGO_ORDER_TAG=GOGOTRADE_ALGO
ENABLE_AUDIT_LOG=true
