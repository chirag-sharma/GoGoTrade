# GoGoTrade Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=GoGoTrade
APP_VERSION=0.1.0
DEBUG_MODE=true
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql+psycopg://gogotrade:gogotrade@localhost:5432/gogotrade
POSTGRES_PASSWORD=gogotrade
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=20

# TimescaleDB Settings
TIMESCALEDB_CHUNK_INTERVAL=7 days
TIMESCALEDB_COMPRESSION_INTERVAL=30 days

# Trading API Keys (Update with your actual keys)
KITE_API_KEY=your_kite_api_key_here
KITE_ACCESS_TOKEN=your_kite_access_token_here
KITE_API_SECRET=your_kite_api_secret_here

# Trading Risk Management
MAX_POSITION_SIZE=0.02
MAX_DAILY_LOSS=0.05
RISK_FREE_RATE=0.06

# Compliance Settings
ALGO_ORDER_TAG=GOGOTRADE_ALGO
ENABLE_AUDIT_LOG=true

# CORS Settings (for production, update with your domain)
ALLOWED_HOSTS=["localhost", "127.0.0.1", "*"]

# Security (Generate strong passwords for production)
SECRET_KEY=your_secret_key_here_generate_strong_one
JWT_SECRET_KEY=your_jwt_secret_here

# External Services
SENTRY_DSN=your_sentry_dsn_here  # Optional for error tracking

# Development Settings
LOG_LEVEL=INFO
ENABLE_API_DOCS=true
